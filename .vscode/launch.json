{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug App",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:debug"
            ], // Use the dev:debug script
            "port": 9229, // Default Node.js debug port
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "test:debug"
            ], // Use the test:debug script
            "port": 9229,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Compiled App",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "debug"
            ], // Use the debug script
            "port": 9229,
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}